        <script>
        
          $(function(){

    
function abrirModal(){

    $('.lightbox-link').each(function(){
    
        const self = $(this);
        const targetModal = (self.attr('href'));
    
        self.click(function(e){
            
            targetModal.fadeIn().css('display', 'flex')
        });
    
    
    })
    
    }
    
    abrirModal();


    function fecharModal(){
        const close = $('.close');

        close.click(function(){
            $('.modal').fadeOut()
        })
            }

            fecharModal();

})
        
        </script>
